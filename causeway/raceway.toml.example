# Raceway Configuration File
# Minimal settings for Raceway 0.1.0

# Server runtime configuration
[server]
host = "127.0.0.1"
port = 8080
verbose = false

# CORS controls
cors_enabled = true
cors_origins = ["*"]

# Request throttling (per minute)
rate_limit_enabled = false
rate_limit_rpm = 1000

# API authentication
auth_enabled = false
# api_keys = ["your-secret-key-here"]

# Storage backends: "memory", "postgres", "supabase"
[storage]
backend = "memory"

[storage.postgres]
# connection_string = "postgresql://user:pass@localhost/raceway"
max_connections = 10
min_connections = 2
connection_timeout_seconds = 30
auto_migrate = true

# Event processing pipeline
[engine]
buffer_size = 10000
batch_size = 100
flush_interval_ms = 100

[race_detection]
enabled = true

[anomaly_detection]
enabled = true

# Distributed tracing
# When enabled, traces are merged across services using recursive BFS
[distributed_tracing]
enabled = true

[logging]
level = "info"
include_modules = false

# Development-only toggles
[development]
cors_allow_all = false

